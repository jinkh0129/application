<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".FirebaseNews.FirebaseNewsActivity">


    <LinearLayout
        android:id="@+id/background_HERE"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#A3D2CA"
        android:orientation="horizontal" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView_news"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:queryHint="Search" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView_news"
        android:layout_marginHorizontal="14dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_economics"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:text="Economics"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_politics"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:text="Politics"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_society"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:text="Social Issues"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_global"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:text="Global News"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_to_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_scrollView"
        android:layout_margin="14dp"
        android:text="Dictionary" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="175dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/firebase_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>