<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frag_background_HERE"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:background="@color/darkGrayColor"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/frag_searchView_news"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:queryHint="Search" />

    <HorizontalScrollView
        android:id="@+id/frag_horizontal_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_searchView_news"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frag_btn_economics"
                android:layout_width="98dp"
                android:layout_height="63dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="4dp"
                android:text="Economics"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/frag_btn_politics"
                android:layout_width="98dp"
                android:layout_height="63dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="4dp"
                android:text="Politics"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/frag_btn_society"
                android:layout_width="98dp"
                android:layout_height="63dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="4dp"
                android:text="Society"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/frag_btn_global"
                android:layout_width="98dp"
                android:layout_height="63dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shadow"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="4dp"
                android:text="Global"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/frag_btn_choosing_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_horizontal_scrollView"
        android:layout_marginStart="14dp"
        android:text="Pick Date" />

    <TextView
        android:id="@+id/date_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_horizontal_scrollView"
        android:layout_margin="14dp"
        android:layout_toRightOf="@+id/frag_btn_choosing_date"
        android:text=""
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="201dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_firebase_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>